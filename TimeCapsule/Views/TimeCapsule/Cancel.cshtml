@model bool
@{
    ViewData["Title"] = "Mektup İptal";
}

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body text-center">
            @if (Model)
            {
                <h4>Mektup başarıyla iptal edildi.</h4>
                <p class="text-muted">Artık gönderilmeyecek.</p>
            }
            else
            {
                <h4>İptal işlemi gerçekleştirilemedi.</h4>
                <p class="text-muted">Bağlantı geçersiz olabilir veya daha önce iptal edilmiş.</p>
            }
        </div>
    </div>
</div>
