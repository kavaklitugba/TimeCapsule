@using Business.DTOs
@model TimeCapsuleCreateDto

@{
    ViewData["Title"] = "Zaman Kapsülü";
}

<div class="container pd-bt-1">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card tc-card shadow-sm">
                <div class="tc-card-header">
                    <h3 class="mb-0">Geleceğe Mektup</h3>
                    <small>Bugünden yaz, seçtiğin tarihte mail olarak gönderilsin.</small>
                </div>

                <div class="card-body p-4">

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success tc-success-box">

                            <div class="tc-success-title">
                                <i class="bi bi-check-circle-fill"></i>
                                @ViewBag.Success
                            </div>
                            @if (ViewBag.LookupId != null)
                            {
                                <div class="tc-success-id">
                                    <span class="tc-success-label">Kapsül ID</span>

                                    <span class="tc-success-code" id="capsuleLookupId">
                                        @ViewBag.LookupId
                                    </span>

                                    <button id="btnCopyLookupId" type="button" class="tc-copy-btn" onclick="copyLookupId()">
                                        Kopyala
                                    </button>

                                    <a class="tc-manage-btn" target="_blank"
                                       href="@Url.Action("Lookup", "TimeCapsule", new { lookupId = ViewBag.LookupId })">
                                        Mektubu Yönet
                                    </a>
                                </div>

                            }

                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger tc-error-box">
                            <div class="tc-error-title">İşlem tamamlanamadı!</div>
                            <div class="tc-error-text">@ViewBag.Error</div>
                        </div>
                    }

                    <form asp-action="Create" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="form-label">Gönderici E-posta <span style="font-size:.92rem;color:#6c757d;display:flex">(Kapsül ile ilgili bilgilendirmeler bu adrese gönderilecektir)</span></label>
                            <input asp-for="SenderEmail" type="email" class="form-control" placeholder="gönderici@gmail.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Alıcı E-posta</label>
                            <input asp-for="RecipientEmail" type="email" class="form-control" placeholder="alıcı@gmail.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Konu <span style="font-size:.92rem;color:#6c757d">(Opsiyonel)</span></label>
                            <input asp-for="Subject" type="text" class="form-control" placeholder="Geleceğe mektup..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Gönderim Tarihi</label>

                            <div class="d-grid gap-2 mb-2">
                                <div class="btn-group d-flex flex-wrap justify-content-between tc-preset" role="group" aria-label="Hazır süreler">

                                    <input type="radio" class="btn-check" name="presetMonths" id="m3" value="3" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m3">3 Ay</label>

                                    <input type="radio" class="btn-check" name="presetMonths" id="m6" value="6" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m6">6 Ay</label>

                                    <input type="radio" class="btn-check" name="presetMonths" id="m12" value="12" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m12">1 Yıl</label>

                                    <input type="radio" class="btn-check" name="presetMonths" id="m24" value="24" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m24">2 Yıl</label>

                                    <input type="radio" class="btn-check" name="presetMonths" id="m60" value="60" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m60">5 Yıl</label>

                                    <input type="radio" class="btn-check" name="presetMonths" id="m120" value="120" autocomplete="off">
                                    <label class="btn tc-pill btn-sm flex-fill" for="m120">10 Yıl</label>

                                    <!-- Tarih Seç: mobilde tam genişlik olacak -->
                                    <input type="radio" class="btn-check" name="presetMonths" id="mCustom" value="" autocomplete="off" checked>
                                    <label class="btn tc-pill tc-pill--primary btn-sm flex-fill tc-datepick" for="mCustom">Tarih Seç</label>

                                </div>
                            </div>

                            <input asp-for="SendAtLocal" type="datetime-local" class="form-control" id="sendAtInput" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mesaj</label>
                            <textarea asp-for="Body" class="form-control" rows="6" placeholder="Gelecekteki kendine yaz..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Resim <span style="font-size:.92rem;color:#6c757d">(Opsiyonel)</span></label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="tc-form-footer">
                            <div class="tc-hint">
                                <span class="secure-dot"></span>
                                Girilen tüm bilgiler şifreli olarak saklanmaktadır, sadece seçtiğin tarihte çözümlenip alıcıya iletilir.
                            </div>

                            <button type="submit" class="btn capsule-submit-btn">
                                Zaman Kapsülüne Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const sendAtInput = document.getElementById("sendAtInput");
            const radios = document.querySelectorAll('input[name="presetMonths"]');

            function pad(n) { return n < 10 ? "0" + n : n; }

            function toLocalDatetimeValue(date) {
                const yyyy = date.getFullYear();
                const mm = pad(date.getMonth() + 1);
                const dd = pad(date.getDate());
                const hh = pad(date.getHours());
                const mi = pad(date.getMinutes());
                return `${yyyy}-${mm}-${dd}T${hh}:${mi}`;
            }

            radios.forEach(r => {
                r.addEventListener("change", function () {
                    const val = this.value;
                    if (!val) return;
                    const months = parseInt(val);
                    const d = new Date();
                    d.setMonth(d.getMonth() + months);
                    sendAtInput.value = toLocalDatetimeValue(d);
                });
            });
        })();
    </script>
    <script>
        function copyLookupId() {
          const el = document.getElementById("capsuleLookupId");
          if (!el) return;

          const text = (el.innerText || el.textContent || "").trim();
          if (!text) return;

          navigator.clipboard.writeText(text).then(() => {
            // butonu id ile yakala (istersen)
            const btn = document.getElementById("btnCopyLookupId");
            if (!btn) return;

            const oldText = btn.innerText;
            btn.innerText = "Kopyalandı ✓";
            setTimeout(() => btn.innerText = oldText, 5000);
          });
        }
    </script>

}
